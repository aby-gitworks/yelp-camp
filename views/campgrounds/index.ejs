<% layout('../views/Layout/boilerplate.ejs') %>
	<h1>All Campgrounds</h1>
	<h3> <a href="/campgrounds/new">Add New Campground</a></h3>
	<ul>
		<% for(let campground of campgrounds){ %>
			<div class="card" mb-3>
				<div class="row">
					<div class="col-md-4">
						<image class="img-fluid" alt="" src="<%=campground.image%>">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title"><%=campground.title%></h5>
							<p class="card-text"><%=campground.description%></p>
							<p class="card-text">
								<small class="text-muted"><%=campground.description%></small>
							</p>
							<a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%=campground.title%></a>
						</div>
					</div>
				</div>
			</div>
		<% } %>
	</ul>
